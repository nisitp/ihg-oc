{
  "name": "crm",
  "version": "1.0.0",
  "description": "CreditRiskMonitor theme.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "sass": "node-sass --output-style compressed --importer node_modules/node-sass-import-once/index.js src/sass/ -o dist/css/",
    "uglify-comment": "Need to improve the below to uglify other libraries etc. and be less ghetto, but for now it should work.",
    "uglify": "mkdir -p dist/scripts && uglifyjs src/scripts/index.js -m -o dist/js/main.js && cp -R src/scripts/* dist/js/ && rm -fR dist/scripts/index",
    "rollup": "node ./rollup.js",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "lint:js": "eslint src/scripts --fix",
    "lint:css": "stylelint src/sass/**/*.scss",
    "imagemin": "imagemin src/images --out-dir=dist/images",
    "icons-notusedyet": "svgo -f src/images/icons && mkdir -p dist/images && svg-sprite-generate -d src/images/icons -o dist/images/icons.svg",
    "serve": "browser-sync start --proxy 'https://hsdevelop-ihgownersassociation.cs169.force.com/connect/s/' --watch --files 'dist/css/*.css, dist/scripts/*.js'",
    "serveWIP": "node app.js",
    "build:css": "npm run sass && npm run autoprefixer",
    "build:js": "npm run lint:js && npm run rollup",
    "build:images": "npm run imagemin",
    "buildOFFLINE:fonts": "mkdir -p dist/webfonts; cp node_modules/@fortawesome/fontawesome-pro/webfonts/* ./dist/webfonts/",
    "watch:css": "onchange \"src/sass/**/*.scss\" -- npm-run-all build:css deploy:css",
    "watch:js": "onchange \"src/scripts/**/*.js\" -- npm-run-all \"build:js --fix\" deploy:js",
    "watch:images": "onchange \"src/images/*\" -- npm-run-all build:images deploy:images",
    "lintwatch:css": "onchange 'src/sass/**/*.scss' -- npm run lint:css",
    "lintwatch:js": "onchange 'src/scripts/**/*.js' -- npm run lint:js",
    "develop": "npm-run-all --parallel lintwatch:* watch:*",
    "develop:quiet": "npm-run-all --parallel 'serve' 'watch:*'",
    "compile": "npm-run-all --parallel 'build:*'",
    "deploy:css": "scp ./dist/css/community.css owners@oc.hotsauceatl.com:/var/www/vhosts/owners.org/connect.owners.org/web/dist/css/community.css",
    "deploy:images": "scp -r ./dist/images owners@oc.hotsauceatl.com:/var/www/vhosts/owners.org/connect.owners.org/web/dist/",
    "deploy:js": "scp -r ./dist/scripts/* owners@oc.hotsauceatl.com:/var/www/vhosts/owners.org/connect.owners.org/web/dist/scripts/"
  },
  "author": "DevCollab",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.5",
    "@babel/preset-env": "^7.7.6",
    "browser-sync": "^2.26.7",
    "ddbreakpoints": "^1.1.3",
    "del": "^3.0.0",
    "eslint": "^6.1.0",
    "imagemin-cli": "^5.1.0",
    "node-sass-import-once": "^1.2.0",
    "onchange": "^6.0.0",
    "rollup-plugin-terser": "^6.1.0",
    "stylelint": "^12.0.0",
    "stylelint-config-standard": "^18.3.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^1.3.0",
    "uglify-js": "^3.7.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.7.0",
    "@fortawesome/fontawesome-free": "^5.12.0",
    "@glidejs/glide": "^3.4.1",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "autoprefixer": "^9.6.1",
    "core-util-is": "^1.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "imagemin": "^7.0.1",
    "jquery": "^3.4.1",
    "lightense-images": "^1.0.9",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "rfs": "^9.0.3",
    "rollup": "^1.27.13",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-uglify": "^6.0.4",
    "slick-carousel": "^1.8.1",
    "stylelint-scss": "^3.9.3",
    "tiny-slider": "^2.9.2"
  },
  "browserslist": "> 0.25%, not dead"
}
